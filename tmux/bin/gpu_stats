#!/usr/bin/env python3
import subprocess

output = subprocess.run(
    [
        "nvidia-smi",
        "--query-gpu=temperature.gpu,memory.used,memory.total,utilization.gpu",
        "--format=csv,noheader,nounits",
    ],
    stdout=subprocess.PIPE,
)
result = output.stdout.decode("utf-8").split("\n")[:-1]

temps = []
mem_used = mem_total = util = 0

for line in result:
    t, u, tot, ut = map(float, line.split(","))
    temps.append(t)
    mem_used += u
    mem_total += tot
    util += ut

print(
    f"#[fg=colour7]GPU #[fg=colour172]{sum(temps) / len(temps):.0f}Â° #[fg=green]{int(mem_used)}/{int(mem_total)}M {int(util)}%"
)
